<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_dd"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_dd_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NUMAD23Fa_DavidDada"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ButtonGridExampleActivity"
            android:exported="true" />
        <activity
            android:name=".AboutActivity"
            android:exported="true" />
        <activity
            android:name=".LinkCollectorActivity"
            android:exported="true" />
        <activity
            android:name=".PrimeDirectiveActivity"
            android:exported="true" />
        <activity
            android:name=".LocationActivity"
            android:exported="true" />

        <service
            android:name="LocationService"
            android:foregroundServiceType="location" />
        <receiver
            android:exported="false"
            android:name="LocationBroadCastReceiver">
            <intent-filter>
                <action android:name="location-changed" />
            </intent-filter>
        </receiver>

    </application>

</manifest>